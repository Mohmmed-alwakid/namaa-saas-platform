# Investment Portfolio Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# === REQUIRED: Supabase Configuration ===
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# === REQUIRED: Stock Data APIs ===
# Alpha Vantage for US stocks - Get free key from https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key

# Polygon.io for additional US stock data (optional)
POLYGON_API_KEY=your_polygon_api_key

# === Application Configuration ===
NEXT_PUBLIC_APP_URL=http://localhost:5180
API_BASE_URL=http://localhost:3005

# === Security ===
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# === OPTIONAL: Email Configuration ===
# SMTP settings for sending notifications (remove if not using email)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password

# === Development Configuration ===
# These are already set optimally, usually no need to change
NODE_ENV=development
PORT=3005
FRONTEND_PORT=5180

# === Production Configuration ===
# Set these when deploying to production
# NODE_ENV=production
# Your production URLs and keys go here